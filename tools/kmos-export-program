import sys
sys.path.append('..')
import optparse
import os
import shutil


import kmos.types
import kmos.export

def main():
    from kmos.config import *
    usage = 'usage: %prog xml file export dir\n'\
        + '    existing export directory will over-written!'

    parser = optparse.OptionParser(usage=usage)
    parser.add_option('-s', '--source-only',
                      action='store_true',
                      dest='source_only',
                      default=False,
                      help='Export source code only, don\'t compile.')
    (options, args) = parser.parse_args()

    if len(args) != 2:
        parser.print_help()
        exit()

    xml_file = args[0]
    export_dir = args[1]

    project_tree = kmos.types.ProjectTree()
    project_tree.import_xml_file(xml_file)

    kmos.export.export_source(project_tree, export_dir)

    if os.uname()[0] == 'Linux' and not options.source_only:
        os.chdir(export_dir)
        os.system("kmos-build")

if __name__ == '__main__':
    main()
